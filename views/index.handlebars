<div class="jumbotron mainHeader">
    <h1 class="text-center">Read the latest from 'The Verge'</h1>
    <div class="row">
        <div class="col text-center">
            <h5>Click on 'Scrape' to get th latst articles</h5>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col text-center">
        <div class="row">
            
            {{#each article}}
                <div class="col-6 mt-5 border-bottom pb-3">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="col-6 mt-5 border-bottom pb-3">
                    <a href="/readArticle/{{this._id}}" id="btnSignUp">Read article</a>
                </div>
            {{/each}}
        </div>
    </div>
</div>